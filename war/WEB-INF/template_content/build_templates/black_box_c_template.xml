            destdir="bin"
            source="${source}"
            target="${target}">
        	<exclude name="origSubmission/**/*"/>
        	<exclude name="bin/**/*"/>
            <classpath refid="assessment.classpath"/>
        </javac>
    </target>

    <target name="run">
        <echo message="Executing '${testName}'"/>
        <foreach param="bbTestData" list="${allTestData}" target="doTest"/>
